{
  "$schema": "http://json-schema.org/schema#",
  "additionalProperties": false,
  "properties": {
    "attachedDocumentURL": {
      "items": {
        "minLength": 1,
        "type": "string"
      },
      "type": "array"
    },
    "essentialRequirements": {
      "items": {
        "maxLength": 100,
        "pattern": "^(?:\\S+\\s+){0,149}\\S+$",
        "type": "string"
      },
      "maxItems": 20,
      "minItems": 1,
      "type": "array"
    },
    "niceToHaveRequirements": {
      "items": {
        "maxLength": 100,
        "pattern": "^(?:\\S+\\s+){0,149}\\S+$",
        "type": "string"
      },
      "maxItems": 20,
      "minItems": 0,
      "type": "array"
    },
    "respondToEmailAddress": {
      "format": "email",
      "minLength": 1,
      "type": "string"
    }
  },
  "required": [
    "attachedDocumentURL",
    "essentialRequirements",
    "respondToEmailAddress"
  ],
  "title": "Training Brief Response Schema",
  "type": "object"
}
